{
  "name": "@mcinteerj/moltbot-gmail",
  "version": "1.1.4",
  "description": "Gmail channel plugin for Moltbot - uses gog CLI for secure Gmail access",
  "type": "module",
  "main": "index.ts",
  "author": "Jake McInteer <mcinteerj@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moltbot/moltbot",
    "directory": "extensions/gmail"
  },
  "keywords": [
    "moltbot",
    "gmail",
    "email",
    "channel",
    "plugin"
  ],
  "moltbot": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "gmail",
      "label": "Gmail",
      "selectionLabel": "Gmail (gog)",
      "detailLabel": "Gmail",
      "docsPath": "/channels/gmail",
      "docsLabel": "gmail",
      "blurb": "Uses gog for secure Gmail access.",
      "systemImage": "envelope",
      "order": 100,
      "showConfigured": true
    }
  },
  "files": [
    "index.ts",
    "src/**/*.ts",
    "moltbot.plugin.json",
    "README.md"
  ],
  "dependencies": {
    "dompurify": "^3.2.3",
    "jsdom": "^25.0.1",
    "marked": "^15.0.6",
    "proper-lockfile": "^4.1.2",
    "sanitize-html": "^2.14.0",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "moltbot": ">=2026.1.0"
  }
}
